<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:color">#263238</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <style name="Views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#37474F</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#E57373</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:alpha">.55</item>
    </style>

    <style name="border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">#90A4AE</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_8</item>
        <item name="android:paddingRight">@dimen/padding_8</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

    <!--Score Layout-->

    <style name="mainTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#D32F2F</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="secondaryTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

<style name="answerViews">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">#37474F</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginLeft">8dp</item>
    <item name="android:layout_marginRight">8dp</item>
</style>

    <style name="questions_2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#37474F</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <!--World Layout-->

    <style name="title">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/europe_quiz</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="categories">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/happy_monkey</item>
    </style>

</resources>